{
    "id"   : "{{PROJECT_ID}}",
    "name" : "{{PROJECT_NAME}}",
    "requirejs" : {{#if USE_REQUIREJS}}true{{else}}false{{/if}},

    "files": [
        {{#if USE_REQUIREJS}}
        {
            "id"   : "build.js",
            "name" : "build.js",
            "type" : "js",
            "drop" : true
        },
        {
            "id"   : "require.js",
            "name" : "js/require.js",
            "type" : "js",
            "lib"  : true
        },
        {{/if}}
        {
            "id"   : "jquery",
            "name" : "kendo/js/jquery.min.js",
            "type" : "js",
            "lib"  : true
        },{
            "id"   : "kendo",
            "name" : "kendo/js/kendo.web.min.js",
            "type" : "js",
            "lib"  : true,
            "deps" : [
                "jquery",
                "kendo.default.css"
            ]
        },{
            "id"   : "less",
            "name" : "js/less-1.3.3.min.js",
            "type" : "js",
            "lib"  : true
        },{
            "id"   : "coffeescript",
            "name" : "js/coffee-script.js",
            "type" : "js",
            "lib"  : true
        },{
            "id"   : "kendo.common.css",
            "name" : "kendo/css/kendo.common.min.css",
            "type" : "css",
            "lib"  : true
        },

        {{#each KENDO_THEMES}}
        {
            "id"   : "kendo.{{{this}}}.css",
            "name" : "kendo/css/kendo.{{{this}}}.min.css",
            "type" : "css",
            "lib"  : true,
            "deps" : [ "kendo.common.css" ]
        },
        {{/each}}

        {
            "id"   : "app.js",
            "name" : "js/app.js",
            "type" : "js",
            "deps" : [
                "kendo",
                "app.less"
            ]
        },{
            "id"   : "app.less",
            "name" : "css/app.less",
            "type" : "less"
        },{
            "id"   : "main",
            "name" : "index.html",
            "type" : "html",
            "page" : true,
            "deps" : [ "app.js" ]
        }
    ]
}
